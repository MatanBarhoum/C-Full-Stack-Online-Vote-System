@using Full_Stack_Online_Voting_System.Model;
@{
}
 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
    <title>Online Voting System - Matan Barhoum</title>
</head>
<body>
    <nav class="nav-bar">
        <a href="/" style="text-decoration: none;"><div class="logo">MatanVersity</div></a>
        <div class="navbar-items">
            <a href="/Login" style="text-decoration: none;"><span class="navbar-item">Vote</span></a>
            <a href="/Messages" style="text-decoration: none;"><span class="navbar-item">Messages</span></a>
            <div class="dropdown">
                <i class="fa-solid fa-circle-user" id="userDropMenu" data-bs-toggle="dropdown" aria-expanded="false"></i>
                <ul class="dropdown-menu" aria-labelledby="userDropMenu">
                    @{
                        if (ViewBag.username == "Guest") {
                                    <li><span class="dropdown-item">Welcome, @ViewBag.username</span></li>
                                    <li class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/login">Login</a></li>
                        } else {
                                    <li><span class="dropdown-item">Welcome, @ViewBag.username</span></li>
                                    <li class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Vote">Vote</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("SignOut", "Home")">Log Off</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <script src="/js/app.js"></script>
</body>
</html>